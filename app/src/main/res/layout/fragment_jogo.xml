<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootJogo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragmentJogo">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/linear"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:id="@+id/jogadorUm"
            android:text="@string/jogadorX">
        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textAlignment="center"
            android:id="@+id/placarUm"
            android:text="0"
            >

        </TextView>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/linear2"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linear"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"

            android:id="@+id/jogadorDois"
            android:text="@string/jogadorO">
        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"

            android:textAlignment="center"
            android:id="@+id/placarDois"

            android:text="0">
        </TextView>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear2"
        app:layout_constraintLeft_toLeftOf="parent">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">
            <Button
                android:id="@+id/bt00"
                style="@style/button"
                />
            <Button
                android:id="@+id/bt01"
                style="@style/button"

                />
            <Button
                android:id="@+id/bt02"
                style="@style/button"
                />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">
            <Button
                android:id="@+id/bt10"
                style="@style/button"
                />
            <Button
                android:id="@+id/bt11"
                style="@style/button"
                />
            <Button
                android:id="@+id/bt12"
                style="@style/button"
                />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">
            <Button
                android:id="@+id/bt20"
                style="@style/button"
                />
            <Button
                android:id="@+id/bt21"
                style="@style/button"
                />
            <Button
                android:id="@+id/bt22"
                style="@style/button"
                />

        </TableRow>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:id="@+id/Empates"
            android:text="@string/jogadorX">
        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textAlignment="center"
            android:id="@+id/placaEmpate"
            android:text="0"
            >

        </TextView>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>